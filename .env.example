# Server Configuration
PORT=8080

# Database Configuration
# Postgres connection string for storing connections, cursors, and emails
DATABASE_URL=postgresql://user:password@localhost:5432/connector_db

# Supabase Configuration
# Your Supabase project URL and anonymous key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Nango Configuration
# Your Nango secret key for API authentication
NANGO_SECRET=your-nango-secret-key

# Nango provider configuration key for Microsoft Graph/Outlook
NANGO_PROVIDER_KEY_OUTLOOK=microsoft-graph
NANGO_PROVIDER_KEY=microsoft-graph

# Nango connection ID for Outlook (set after admin consent OAuth flow)
NANGO_CONNECTION_ID_OUTLOOK=your-outlook-connection-id
NANGO_CONNECTION_ID=your-outlook-connection-id

# Nango provider configuration key for Gmail
NANGO_PROVIDER_KEY_GMAIL=google-mail

# Nango connection ID for Gmail (set after OAuth flow)
NANGO_CONNECTION_ID_GMAIL=your-gmail-connection-id

# Microsoft Graph Configuration (Optional)
# Your organization's tenant ID for logging/tagging
GRAPH_TENANT_ID=your-azure-tenant-id

# Debug Configuration
# Set to "true" to write normalized emails to ./outbox.jsonl for inspection
SAVE_JSONL=false

# Cortex Hybrid RAG Configuration
# Neo4j Aura credentials
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Qdrant Vector Database
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# OpenAI API key for embeddings and LLM
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Supabase service key for Cortex (can reuse same Supabase)
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_DB_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Graphiti Configuration (optional)
SEMAPHORE_LIMIT=10
